<div class="container-fluid w-100 d-flex flex-column align-items-center mt-2">
  <%= form_with model: @group, url: groups_path, method: :post, :html => {:class => "w-75 mt-4"} do |form| %>
    <div class="form-floating mb-3 w-100">
      <%= form.text_field :name, class:"form-control", id:"floatingInput", placeholder:"Category name" %>
      <%= form.label :name, 'Name', class: "form-label" %>
    </div>
    <div class="form-floating mb-3 w-100">
      <%= form.text_field :icon, class:"form-control", id:"floatingInput", placeholder:"Category icon"  %>
      <%= form.label :icon, 'Icon link', class: "form-label" %>
    </div>
    <%= form.submit 'Create category', class: "btn btn-warning text-white" %>
  <% end %>
</div>

<br>
<%= link_to "Back",groups_path, class:"btn btn-primary text-white" %>
